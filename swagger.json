{
	"swagger": "2.0",
	"info": {
		"description": "This is a basic chat app",
		"version": "1.0.0",
		"title": "Sema chat app",
		"contact": {
			"email": "abagammy@gmail.com"
		},
		"license": {
			"name": "Apache 2.0",
			"url": "http://www.apache.org/licenses/LICENSE-2.0.html"
		}
	},
	"host": "localhost:3000",
	"basePath": "/",
	"tags": [{
		"name": "user",
		"description": "Create and manage your account"
	}],
	"schemes": [
		"http"
	],
	"paths": {
		"/user/sign-up": {
			"post": {
				"tags": [
					"user"
				],
				"summary": "Create a new user account",
				"description": "",
				"operationId": "addUser",
				"consumes": [
					"application/json"
				],
				"produces": [
					"application/json"
				],
				"parameters": [{
					"in": "body",
					"name": "body",
					"description": "User details for creating an account",
					"required": true,
					"schema": {
						"$ref": "#/definitions/User"
					}
				}],
				"responses": {
					"201": {
						"description": "User account was created successfuly"
					},
					"422": {
						"description": "Invalid username/password supplied"
					},
					"400": {
						"description": "User account already exists"
					}
				}
			}
		},
		"/user/log-in": {
			"post": {
				"tags": [
					"user"
				],
				"summary": "Authenticate a user",
				"description": "",
				"operationId": "authenticateUser",
				"consumes": [
					"application/json"
				],
				"produces": [
					"application/json"
				],
				"parameters": [{
					"in": "body",
					"name": "body",
					"description": "User details for authentication",
					"required": true,
					"schema": {
						"$ref": "#/definitions/Authenticate"
					}
				}],
				"responses": {
					"200": {
						"description": "Authentication was successfuly"
					},
					"422": {
						"description": "Invalid username/password supplied"
					},
					"400": {
						"description": "Invalid user credentials"
					}
				}
			}
		},
		"/user/get-users": {
			"get": {
				"tags": [
					"user"
				],
				"summary": "Fetch all users",
				"description": "",
				"operationId": "fetchUsers",
				"consumes": [
					"application/json"
				],
				"produces": [
					"application/json"
				],
				"responses": {
					"200": {
						"description": "Users fetched successfuly"
					},
					"400": {
						"description": "No users available at the moment"
					},
					"401": {
						"description": "Authentication is required"
					}
				},
				"security": [{
					"sema_auth": []
				}]
			}
		},
		"/user/delete/{userId}": {
			"delete": {
				"tags": [
					"user"
				],
				"summary": "Delete a user and related activities",
				"description": "",
				"operationId": "deleteUser",
				"consumes": [
					"application/json"
				],
				"produces": [
					"application/json"
				],
				"parameters": [{
					"in": "path",
					"name": "userId",
					"description": "Targeted user id, find one under /user/log-in response",
					"required": true,
					"default": "5cbedfa8a128768ac15d75ac"
				}],
				"responses": {
					"200": {
						"description": "Users deleted successfuly"
					},
					"400": {
						"description": "Invalid user id"
					},
					"401": {
						"description": "Authentication is required"
					},
					"422": {
						"description": "No user with that id found"
					}
				},
				"security": [{
					"sema_auth": []
				}]
			}
		}
	},
	"securityDefinitions": {
		"sema_auth": {
			"type": "apiKey",
			"name": "x-access-token",
			"in": "header"
		}
	},
	"definitions": {
		"User": {
			"type": "object",
			"properties": {
				"username": {
					"required": true,
					"type": "string",
					"example": "John Doe"
				},
				"phone": {
					"description": "Your phone number",
					"required": true,
					"type": "string",
					"example": "+250788435367"
				},
				"password": {
					"description": "A secure and memorable password",
					"required": true,
					"type": "string",
					"example": "secret123"
				}
			}
		},
		"Authenticate": {
			"type": "object",
			"properties": {
				"username": {
					"required": true,
					"type": "string",
					"example": "John Doe"
				},
				"password": {
					"required": true,
					"type": "string",
					"example": "secret123"
				}
			}
		}
	}
}