{
	"swagger": "2.0",
	"info": {
		"description": "This is a basic chat app",
		"version": "1.0.0",
		"title": "Sema chat app",
		"contact": {
			"email": "abagammy@gmail.com"
		},
		"license": {
			"name": "Apache 2.0",
			"url": "http://www.apache.org/licenses/LICENSE-2.0.html"
		}
	},
	"host": "localhost:3000",
	"basePath": "/",
	"tags": [{
			"name": "user",
			"description": "Create and manage your account"
		},
		{
			"name": "message",
			"description": "Send, receive and manage messages"
		}
	],
	"schemes": [
		"http"
	],
	"paths": {
		"/user/sign-up": {
			"post": {
				"tags": [
					"user"
				],
				"summary": "Create a new user account",
				"description": "",
				"operationId": "addUser",
				"consumes": [
					"application/json"
				],
				"produces": [
					"application/json"
				],
				"parameters": [{
					"in": "body",
					"name": "body",
					"description": "User details for creating an account",
					"required": true,
					"schema": {
						"$ref": "#/definitions/User"
					}
				}],
				"responses": {
					"201": {
						"description": "User account was created successfuly"
					},
					"422": {
						"description": "Invalid username/password supplied"
					},
					"400": {
						"description": "User account already exists"
					}
				}
			}
		},
		"/user/log-in": {
			"post": {
				"tags": [
					"user"
				],
				"summary": "Authenticate a user",
				"description": "",
				"operationId": "authenticateUser",
				"consumes": [
					"application/json"
				],
				"produces": [
					"application/json"
				],
				"parameters": [{
					"in": "body",
					"name": "body",
					"description": "User details for authentication",
					"required": true,
					"schema": {
						"$ref": "#/definitions/Authenticate"
					}
				}],
				"responses": {
					"200": {
						"description": "Authentication was successfuly"
					},
					"422": {
						"description": "Invalid username/password supplied"
					},
					"400": {
						"description": "Invalid user credentials"
					}
				}
			}
		},
		"/user/get-users": {
			"get": {
				"tags": [
					"user"
				],
				"summary": "Fetch all users",
				"description": "",
				"operationId": "fetchUsers",
				"consumes": [
					"application/json"
				],
				"produces": [
					"application/json"
				],
				"responses": {
					"200": {
						"description": "Users fetched successfuly"
					},
					"400": {
						"description": "No users available at the moment"
					},
					"401": {
						"description": "Authentication is required"
					}
				},
				"security": [{
					"sema_auth": []
				}]
			}
		},
		"/user/delete/{userId}": {
			"delete": {
				"tags": [
					"user"
				],
				"summary": "Delete a user and related activities",
				"description": "",
				"operationId": "deleteUser",
				"consumes": [
					"application/json"
				],
				"produces": [
					"application/json"
				],
				"parameters": [{
					"in": "path",
					"name": "userId",
					"description": "Targeted user id, find one under /user/log-in response",
					"required": true,
					"default": "5cbedfa8a128768ac15d75ac"
				}],
				"responses": {
					"200": {
						"description": "Users deleted successfuly"
					},
					"400": {
						"description": "Invalid user id"
					},
					"401": {
						"description": "Authentication is required"
					},
					"422": {
						"description": "No user with that id found"
					}
				},
				"security": [{
					"sema_auth": []
				}]
			}
		},
		"/message": {
			"post": {
				"tags": [
					"message"
				],
				"summary": "Send a message to another user",
				"description": "",
				"operationId": "sendMessage",
				"consumes": [
					"application/json"
				],
				"produces": [
					"application/json"
				],
				"parameters": [{
					"in": "body",
					"name": "body",
					"description": "Content of the message to be sent",
					"required": true,
					"schema": {
						"$ref": "#/definitions/Message"
					}
				}],
				"responses": {
					"201": {
						"description": "Message sent!"
					},
					"400": {
						"description": "User not found"
					},
					"401": {
						"description": "Authentication is required"
					}
				},
				"security": [{
					"sema_auth": []
				}]
			}
		},
		"/message/read/{messageId}": {
			"get": {
				"tags": [
					"message"
				],
				"summary": "Read a message and display it as read",
				"description": "",
				"operationId": "readMessage",
				"consumes": [
					"application/json"
				],
				"produces": [
					"application/json"
				],
				"parameters": [{
					"in": "path",
					"name": "messageId",
					"description": "Id of the message to read",
					"required": true,
					"default": "5cc0252b396b112759fd1e9d"
				}],
				"responses": {
					"200": {
						"description": "Message successfuly read"
					},
					"400": {
						"description": "Invalid request"
					},
					"401": {
						"description": "Authentication is required"
					},
					"422": {
						"description": "Message not found"
					}
				},
				"security": [{
					"sema_auth": []
				}]
			}
		},
		"/message/received": {
			"get": {
				"tags": [
					"message"
				],
				"summary": "Retrieve all received messages",
				"description": "",
				"operationId": "receivedMessages",
				"consumes": [
					"application/json"
				],
				"produces": [
					"application/json"
				],
				"parameters": [],
				"responses": {
					"200": {
						"description": "Received messages retrieved successfuly!"
					},
					"400": {
						"description": "Invalid request"
					},
					"401": {
						"description": "Authentication is required"
					},
					"422": {
						"description": "No Messages found"
					}
				},
				"security": [{
					"sema_auth": []
				}]
			}
		},
		"/message/sent": {
			"get": {
				"tags": [
					"message"
				],
				"summary": "Retrieve all sent messages",
				"description": "",
				"operationId": "sentMessages",
				"consumes": [
					"application/json"
				],
				"produces": [
					"application/json"
				],
				"parameters": [],
				"responses": {
					"200": {
						"description": "Sent messages retrieved successfuly!"
					},
					"400": {
						"description": "Invalid request"
					},
					"401": {
						"description": "Authentication is required"
					},
					"422": {
						"description": "No Messages found"
					}
				},
				"security": [{
					"sema_auth": []
				}]
			}
		},
		"/message/all": {
			"get": {
				"tags": [
					"message"
				],
				"summary": "Retrieve all messages",
				"description": "",
				"operationId": "allMessages",
				"consumes": [
					"application/json"
				],
				"produces": [
					"application/json"
				],
				"parameters": [],
				"responses": {
					"200": {
						"description": "All messages retrieved successfuly!"
					},
					"400": {
						"description": "Invalid request"
					},
					"401": {
						"description": "Authentication is required"
					},
					"422": {
						"description": "No Messages found"
					}
				},
				"security": [{
					"sema_auth": []
				}]
			}
		}
	},
	"securityDefinitions": {
		"sema_auth": {
			"type": "apiKey",
			"name": "x-access-token",
			"in": "header"
		}
	},
	"definitions": {
		"User": {
			"type": "object",
			"properties": {
				"username": {
					"required": true,
					"type": "string",
					"example": "John Doe"
				},
				"phone": {
					"description": "Your phone number",
					"required": true,
					"type": "string",
					"example": "+250788435367"
				},
				"password": {
					"description": "A secure and memorable password",
					"required": true,
					"type": "string",
					"example": "secret123"
				}
			}
		},
		"Authenticate": {
			"type": "object",
			"properties": {
				"username": {
					"required": true,
					"type": "string",
					"example": "John Doe"
				},
				"password": {
					"required": true,
					"type": "string",
					"example": "secret123"
				}
			}
		},
		"Message": {
			"type": "object",
			"properties": {
				"to": {
					"required": true,
					"type": "string",
					"example": "+250788435367"
				},
				"message": {
					"required": true,
					"type": "string",
					"example": "Hello ✌️"
				}
			}
		}
	}
}